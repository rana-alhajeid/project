@page
@model pets.Pages.CartModel
@{
}
<h2>Cart</h2>

<div class="row">
    @foreach (var item in Model.CartItems)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="@item.ImageURL" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Price: @item.Price</p>
                    <p class="card-text">
                        Quantity:
                        <form method="post" asp-page-handler="Update" class="d-inline">
                            <input type="hidden" name="petId" value="@item.PetID" />
                            <input type="number" name="quantity" value="@item.Quantity" class="form-control form-control-sm d-inline-block" style="width: 70px;" />
                            <button type="submit" class="btn btn-link btn-sm">Update</button>
                        </form>
                    </p>
                  
                    <form method="post" asp-page-handler="Delete">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                        <input type="hidden" name="petId" value="@item.PetID" />
                    </form>
                </div>
            </div>
        </div>
    }
</div>

<a asp-page="/ConfirmationPayment" class="btn btn-primary">Proceed to Confirmation</a>